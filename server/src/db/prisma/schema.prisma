generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Startup {
  id              Int           @id @default(autoincrement())
  companyName     String
  introduce       String
  category        String
  totalAmount     BigInt
  salesRevenue    BigInt
  numOfEmployees  Int
  investments     Investment[]
  createdAt       DateTime      @default(now())
}

model Investment {
  id         Int       @id @default(autoincrement())
  username   String
  amount     BigInt
  comment    String?
  password   String
  startupId  Int
  startup    Startup    @relation(fields: [startupId], references: [id])
  createdAt  DateTime   @default(now())
}
